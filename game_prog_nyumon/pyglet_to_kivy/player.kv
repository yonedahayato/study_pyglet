#:kivy 1.0.9

<ColorBall>:
    size: 300, 300
    canvas:
        Color:
            rgba: 0, 0, 1, 1
        Ellipse:
            pos: self.pos
            size: self.size

<CharacterBall>:
    source: ''
    # size: self.texture_size
    # size: self.size
    size: 400, 400
    pos: self.pos
    canvas.before:
        PushMatrix
        Rotate:
            angle: root.angle
            axis: 0, 0, 1
            origin: root.center
    canvas.after:
        PopMatrix

<PlayerBall>:
    source: ''
    # size: self.texture_size
    # size: self.size
    size: 400, 400
    pos: self.pos

<PlayerGame>:
    #.py で参照する変数: .kv で参照する変数
    ball: color_ball
    character_ball: character_ball
    cho_cho: cho_cho
    baymax: baymax

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    ColorBall:
        id: color_ball
        center: self.parent.center

    CharacterBall:
        id: character_ball
        center: self.parent.center

    CharacterBall:
        id: cho_cho
        center: self.parent.center

    PlayerBall:
        id: baymax
        center: self.parent.center
